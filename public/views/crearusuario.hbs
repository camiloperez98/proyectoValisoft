  <script>

        const usuarioUsu =  /^[a-zA-Z0-9_-]+$/
        const rolUsu = /^[a-zA-Z_-]+$/
        const emailUsu = /^[\w-]+(\.[\w-]+)*@([\w-]+\.)+[a-zA-Z]{2,7}$/
        const contrasenaUsu = /^[0-9]{2}[a-zA-Z]{4}$/
        const confirmarUsu = /^[0-9]{2}[a-zA-Z]{4}$/
        const telefonoUsu = /^\d{10}$/

        const form = document.querySelector('#validar-crear');


        form.addEventListener('submit' , e => {
            e.preventDefault();
            const usuario = e.target.usuario.value;
            const rol = e.target.rol.value;
            const email = e.target.email.value;
            const telefono = e.target.telefono.value;
            const contrasena = e.target.contrasena.value;
            const confirmar = e.target.confirmar.value;


            try{
                if(usuario == '' || rol == '' || email == '' || contrasena == '' || confirmar == ''){
                    throw 'Complete todos los campos';
                    
                }
                if(!usuarioUsu.test(usuario)){
                    throw 'Ingrese un nombre de usuario valido';
                }
                if(!rolUsu.test(rol)){
                    throw 'Ingrese un rol de usuario valido';
                }

                if(!emailUsu.test(email)){
                    throw 'Ingrese un email valido'
                }

                if(!contrasenaUsu.test(contrasena)){
                    throw 'Ingrese una contraseña valida'
                }
                if(!telefonoUsu.test(telefono)){
                    throw 'Ingrese un telefono valido'
                }

                if(!confirmarUsu.test(confirmar)){
                    throw 'Ingrese una confirmacion valida'
                }

                if(contrasena != confirmar){
                    throw 'Las contraseñas no coinciden'
                }

                window.open('/usuarios')

            }catch(e){
                alert(' ERROR: ' + e);

            }
        })
    </script>



